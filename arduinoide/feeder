// Função para acionar motor
void feedNow() {
  Serial.println("🚚 A rodar motor para alimentar...");
  digitalWrite(EN_PIN, LOW);
  digitalWrite(DIR_PIN, HIGH); // Ajusta se rodar no sentido errado

  for (int i = 0; i < 200; i++) {
    digitalWrite(STEP_PIN, HIGH);
    delayMicroseconds(1000);
    digitalWrite(STEP_PIN, LOW);
    delayMicroseconds(1000);
  }

  digitalWrite(EN_PIN, HIGH);
  Serial.println("✅ Motor terminou de rodar.");
}

// Callback MQTT
void mqttCallback(char* topic, byte* payload, unsigned int length) {
  String msg;
  for (int i = 0; i < length; i++) msg += (char)payload[i];
  msg.trim();

  Serial.print("[MQTT] Mensagem recebida: ");
  Serial.println(msg);

  if (msg == "feed") {
    feedNow();
  }
}

// WiFi
void connectWiFi() {
  WiFi.begin(ssid, password);
  Serial.print("🔌 [WiFi] A ligar...");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println();
  Serial.println("✅ [WiFi] Ligado");
  Serial.print("📡 IP: ");
  Serial.println(WiFi.localIP());
}

// NTP
void syncTime() {
  configTime(gmt_offset_sec, daylight_offset_sec, ntp_server);
  while (time(nullptr) < 100000) {
    delay(500);
    Serial.print(".");
  }
  Serial.println();
  Serial.println("⏰ [NTP] Hora sincronizada");
}

// MQTT
void connectMQTT() {
  BearSSL::X509List cert(ca_cert);
  secureClient.setTrustAnchors(&cert);

  mqtt_client.setServer(mqtt_broker, mqtt_port);
  mqtt_client.setCallback(mqttCallback);

  while (!mqtt_client.connected()) {
    String clientId = "petfeeder-" + String(ESP.getChipId());
    Serial.println("🔁 [MQTT] A ligar ao broker...");
    if (mqtt_client.connect(clientId.c_str(), mqtt_username, mqtt_password)) {
      Serial.println("✅ [MQTT] Ligado ao broker");
      mqtt_client.subscribe(mqtt_topic);
    } else {
      Serial.print("❌ [MQTT] Erro: ");
      Serial.print(mqtt_client.state());
      Serial.println(" (a tentar em 5s)");
      delay(5000);
    }
  }
}

// Setup
void setup() {
  Serial.begin(115200);
  pinMode(STEP_PIN, OUTPUT);
  pinMode(DIR_PIN, OUTPUT);
  pinMode(EN_PIN, OUTPUT);
  digitalWrite(EN_PIN, HIGH);  // Desativa por defeito

  connectWiFi();
  syncTime();
  connectMQTT();
}

// Loop
void loop() {
  if (!mqtt_client.connected()) connectMQTT();
  mqtt_client.loop();
}
